@page
@model RentBookApp.Pages.AllRentals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Rentals History</h1>

<p>
    <a asp-page="Create">Create a new rental</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rentals[0].RentedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rentals[0].ReturnedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rentals[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rentals[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rentals) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RentedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
